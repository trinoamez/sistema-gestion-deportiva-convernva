{
  "name": "sistema-gestion-deportiva-convernva",
  "version": "1.2.0",
  "description": "Sistema web moderno y responsivo para la gestión deportiva de Convernva",
  "main": "index.php",
  "scripts": {
    "dev": "npm run watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass assets/scss:assets/css --style compressed",
    "build:js": "webpack --mode production",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass assets/scss:assets/css --watch",
    "watch:js": "webpack --mode development --watch",
    "lint:css": "stylelint 'assets/scss/**/*.scss'",
    "lint:js": "eslint 'assets/js/**/*.js'",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:fix": "npm run lint:css --fix && npm run lint:js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf assets/css/*.css assets/js/*.js node_modules",
    "install:dev": "npm install && composer install",
    "start": "php -S localhost:8000",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build --no-cache"
  },
  "keywords": [
    "deportes",
    "gestión",
    "torneos",
    "atletas",
    "inscripciones",
    "php",
    "mysql",
    "web",
    "responsive"
  ],
  "author": "Equipo Convernva <desarrollo@convernva.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/crudmysql.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/crudmysql/issues"
  },
  "homepage": "https://github.com/tu-usuario/crudmysql#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-order": "^6.0.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "font-awesome": "^4.7.0",
    "jquery": "^3.7.1",
    "popper.js": "^1.16.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/vendor/**",
      "!assets/js/**/*.min.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jquery": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "no-unused-vars": "warn"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "plugins": ["stylelint-order"],
    "rules": {
      "order/properties-alphabetical-order": true,
      "scss/at-rule-no-unknown": true,
      "scss/selector-no-redundant-nesting-selector": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}


