{
    "name": "convernva/sistema-gestion-deportiva",
    "description": "Sistema web moderno y responsivo para la gestión deportiva de Convernva",
    "type": "project",
    "keywords": [
        "deportes",
        "gestión",
        "torneos",
        "atletas",
        "inscripciones",
        "php",
        "mysql"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Equipo Convernva",
            "email": "desarrollo@convernva.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Convernva\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Convernva\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "stan": "phpstan analyse src/",
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}


